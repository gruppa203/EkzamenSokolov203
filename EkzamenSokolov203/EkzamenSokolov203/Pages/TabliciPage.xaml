<Page x:Class="EkzamenSokolov203.Pages.TabliciPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenSokolov203.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabliciPage" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Tovar" Content="Товар" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
            <Button x:Name="Roli" Content="Роли" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
            <Button x:Name="Proizvoditeli" Content="Производители" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
            <Button x:Name="Postavchiki" Content="Поставщики" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
            <Button x:Name="Polzovateli" Content="Пользователи" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
            <Button x:Name="Kategorii" Content="Категории" Style="{StaticResource KnopkiAvrotizacii}" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
