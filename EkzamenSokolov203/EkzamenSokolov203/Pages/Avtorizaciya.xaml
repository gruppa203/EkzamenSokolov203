<Page x:Class="EkzamenSokolov203.Pages.Avtorizaciya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenSokolov203.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizaciya" Background="White">

    <Grid x:Name="AvtorizaciyaPage">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="Login" Content="Введите логин" Style="{StaticResource Avtorizaciya}"/>
            <TextBox x:Name="Pole_dlya_logina" Text=""/>
            <Label x:Name="Parol" Content="Введите пароль" Style="{StaticResource Avtorizaciya}"/>
            <TextBox x:Name="Pole_dlya_parolya" Text=""/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Vhod" Content="Войти" Width="150" Margin="4" Style="{StaticResource KnopkiAvrotizacii}"/>
                <Button x:Name="Nazad" Content="Назад" Width="50" Margin="4" Style="{StaticResource KnopkiAvrotizacii}" Click="Nazad_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
